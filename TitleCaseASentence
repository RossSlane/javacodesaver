function titleCase(str) {
  var arr1 = str.toLowerCase().split(" ");
  var arr11 = [];
  for (a = 0; a < arr1.length; a++) {
    arr11.push(arr1[a][0].toUpperCase() + arr1[a].slice(1));
  }
  var arr2 = arr11.join(" ");
  console.log(arr1);
  console.log(arr2);
  return arr2;
}

titleCase("I'm a little tea pot");
